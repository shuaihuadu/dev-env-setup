# EditorConfig - 统一编辑器配置
# https://editorconfig.org

# 顶级配置文件
root = true

#===============================================================================
# 默认配置 (所有文件)
#===============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

#===============================================================================
# 前端文件
#===============================================================================
[*.{js,jsx,ts,tsx,vue,svelte}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

#===============================================================================
# 配置文件
#===============================================================================
[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.xml]
indent_size = 2

#===============================================================================
# 脚本和后端
#===============================================================================
[*.{sh,bash,zsh}]
indent_size = 4
shell_variant = bash

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[*.{rs,rust}]
indent_size = 4

[*.java]
indent_size = 4

[*.{cs,csx}]
indent_size = 4

[*.rb]
indent_size = 2

#===============================================================================
# 文档
#===============================================================================
[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{txt,text}]
indent_size = 4

#===============================================================================
# Makefile (必须使用 tab)
#===============================================================================
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

#===============================================================================
# Docker
#===============================================================================
[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

#===============================================================================
# Git
#===============================================================================
[.gitattributes]
indent_size = 4

[.gitignore]
indent_size = 4
